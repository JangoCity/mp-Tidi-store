@import 'variable.styl'
@import 'mixin.styl'
body, html
  line-height 1
  font-family 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select none
  -webkit-tap-highlight-color transparent
  background $color-background
  color $color-text
.container
  background #fff
  font-size 14px
  color #333
.max-img
  max-width 100%
  max-height 100%
.btn
  position:relative;
  display:block;
  margin:auto;
  padding:0 14px;
  box-sizing:border-box;
  font-size:18px;
  text-align:center;
  text-decoration:none;
  line-height:2.55555556;
  border-radius:5px;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;

.btn-normal
  display inline-block
  font-size inherit
  color inherit
  background transparent
  box-shadow none
  border-radius 0
  border none
  padding 0
  &::after
    display none
button[disabled], .btn-disabled
  background #ccc !important
  color #fff
.btn-confirm
  font-size 16px
  background #e60012
  color #fff
.btn-confirm-hover
  background #d10012
.line-gradient-btn
  color #fff
  background linear-gradient(to bottom, #e61b00, #ff5408)
.line-gradient-btn-hover
  background #e61b00
.money
  &::before
    content 'ï¿¥'
    font-size 12px
.list-text-between
  .item
    display flex
    flex-wrap nowrap
    justify-content space-between
    .label
      color #666
    .info
      color #333
.empty-wrapper
  posCenter()
